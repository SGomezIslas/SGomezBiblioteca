@model ML.Libro
@{
    ViewData["Title"] = "GetAll";
}

<h1 class="text text-center">Libros</h1>

<div>
    <a href="@Url.Action("Form","Libro")" class="btn btn-outline-success me-md-5"><i class="bi bi-person-add"></i></a>
</div>

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        Error!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table-dark table-hover" id="tabla">
            <thead class="table-secondary">
                <tr class="text-center">
                    <td>Editar</td>
                    <td>Libro</td>
                    <td>Autor</td>
                    <td>Editorial</td>
                    <td>Numero de paginas </td>
                    <td>Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Libro libro in Model.libross)
                {
                    <tr class=" text-center">
                        <td><a href="@Url.Action("Form","Libro", new {IdLibro = libro.IdLibro})" class="btn  btn-warning"><i class="bi bi-pencil-square"></i></a></td>
                        <td>@libro.IdLibro</td>
                        <td>@libro.Autor</td>
                        <td>@libro.Editorial</td>
                        <td>@libro.NumeroPaginas</td>
                        <td><a href="@Url.Action("Delete","Libro", new {IdLibro = libro.IdLibro} )" class="btn btn-danger"><i class="bi bi-trash" style="color:black"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}